        script. 
            var userLoggedIn = !{userLoggedInJs};
            
        .wrapper
            .bannerContainer                 
                .nameContainer 
                    p Social Outpost
                .navContainer 
                    a(href="/") Home 
                    a(href="/profile") Profile                           
                    a(href="/events") Events                             
                    a(href="/directory") Directory                            
                    a(href="/announcements") Announcements                            
                    a(href="/alumniCouncil") Council                            
                    a(href="/search") Search
                    
                .controlsContainer                     
                    a(href="/notifications")
                        i.fas.fa-bell 
                        span#notificationsBadge
                    a(href="/messages")
                        i.fas.fa-envelope 
                        span#messagesBadge    
                    a(href="/logout") 
                        i.fas.fa-sign-out-alt 
            
            
            .row 
                 
                .mainSectionContainer.col-11.col-md-11.col-lg-11

                    .titleContainer 

extends layouts/login-layout.pug

block content 
    .loginContainer(style="background-image: url('/images/alumini-connect-bg.jpg')")
        h1 Alumini Connect Login
        .loginButtons
            a.btn(href="/login") Alumini Login
            a.btn(href="/handlerAccess") Admin Login
            a.btn(href="/teacherAccess") Teacher Login

    .modal.fade#loginModal.tabindex=-1(role='dialog', aria-labelledby='loginModalLabel', aria-hidden='true')
        .modal-dialog(role='document')
            .modal-content
                .modal-header
                    h5.modal-title#loginModalLabel Login
                    button.close(type='button', data-dismiss='modal', aria-label='Close')
                        span(aria-hidden='true') &times;
                .modal-body
                    form(method="post")
                        p.errorMessage #{errorMessage}      
                        input(type="text", name="logUsername", placeholder="Username", value=logUsername, required="")
                        input(type="password", name="logPassword", placeholder="Password", required="")
                        input(type="submit", value="Login") 
                .modal-footer
                    a(href="/signup") Create Account
